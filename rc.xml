<?xml version="1.0"?>

<labwc_config>

<theme><name>Clia</name><cornerRadius>1</cornerRadius><font name="IBM Plex Sans" size="12" /></theme>

<keyboard>
 <default />
 <keybind key="W-Space"><action name="ShowMenu" menu="root-menu" /></keybind>
 <keybind key="W-Backspace"><action name="Togglemaximize" /></keybind>
 <keybind key="W-\"><action name="Iconify" /></keybind>
 <keybind key="W-f"><action name="ToggleFullscreen" /></keybind>
 <keybind key="W-Return"><action name="Execute" command="alacritty" /></keybind>
 <keybind key="W-m"><action name="Execute" command="virt-manager" /></keybind>
 <keybind key="W-a"><action name="Execute" command="pavucontrol" /></keybind>
 <keybind key="W-p"><action name="Execute" command="pinta" /></keybind>
 <keybind key="W-g"><action name="Execute" command="chromium-browser --enable-features=UseOzonePlatform,VaapiVideoDecodeLinuxGL --ozone-platform=wayland --use-gl=angle --use-angle=gl %U" /></keybind>
</keyboard>

<mouse>
<default />
<context name="Root">
<mousebind button="Right" action="Press"><action name="ShowMenu" menu="root-menu" /></mousebind>
</context>
</mouse>

</labwc_config>
